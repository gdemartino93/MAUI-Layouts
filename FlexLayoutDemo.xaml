<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiLayout.FlexLayoutDemo"
             Title="FlexLayoutDemo">

    <FlexLayout Direction="Column">
        <Label Text="HEADER" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Background="AntiqueWhite" FlexLayout.Basis="30"/>

        <FlexLayout FlexLayout.Grow="1" JustifyContent="SpaceBetween" Direction="Row">
            <BoxView BackgroundColor="AntiqueWhite" FlexLayout.Basis="40" FlexLayout.Order="1"/>
            <BoxView BackgroundColor="AntiqueWhite" FlexLayout.Basis="40" FlexLayout.Order="3"/>
            <Label Background="DimGrey" FlexLayout.Grow="1" FlexLayout.Order="2" />
        </FlexLayout>

        <Label Background="Aquamarine" FlexLayout.Basis="50"/>


    </FlexLayout>



</ContentPage>